<label>YOUR MONEY:</label>
<input type="text" name="" id="num2">
<input type="button" value="CHECK" onclick="display()">
<br><br>
<h1 style="color:pink">THE INTEREST IS:</h1><h1 id="rate"></h1>
<h1 style="color: #FFF8E7">PLEASE THIS AMOUNT:</h1><h1 id="pay"></h1>



	<script type="text/javascript">
		
		
		function display()
	{
		var amount=Number(document.getElementById('num2').value);
		var category=Number("");
		if(isNaN(amount)==false)
		{
			if (amount>10000)
			{
				alert("10000 is the kinalaaaasann")
			}
			else if (amount>5000)
			{
				category=50
			}
			else if (amount>2000)
			{
				category=20
			}
			else if (amount>1000)
			{
				category=10
			}
			else if (amount>500)
			{
				category=4
			}
			else if (amount>200)
			{
				category=3
			}
			else if (amount>100)
			{
				category=2
			}
			else
			{
				category=0
			}
			document.getElementById('rate').innerHTML=category;
			var num2=Number(amount);
			var payment=category+num2;
			document.getElementById('pay').innerHTML=payment;
			

		}
		else
		{
			alert("ITS NOT A NUMBER")
		}
	}
	</script>
